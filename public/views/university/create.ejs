<!DOCTYPE html5>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>New Product</title>
    <!-- General META -->
    <meta charset="utf-8">
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>

    <h2>Create New Product</h2>
    <div class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" placeholder="John Doe">
    </div>
  </div>
  
    <div class="form-group">
    <label for="photo" class="col-sm-2 control-label">Photo</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="photo" placeholder="John Doe">
    </div>
  </div>
  
  
    <div class="form-group">
    <label for="url" class="col-sm-2 control-label">Url</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="url" placeholder="John Doe">
    </div>
  </div>
  
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="3" id="description"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="rank" class="col-sm-2 control-label">Rank</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="rank">
    </div>
  </div>
  <div class="form-group">
    <label for="address" class="col-sm-2 control-label">Address</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="address">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="submit" type="submit" class="btn btn-default">Submit</button>
      <div id="error"></div>
    </div>
  </div>
</div>
  </body>
  <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/ejs_production.js"></script>
  <script>
  var university = {
    name: "",
    photo:"",
    url:"",
    description:"",
    price: null,
    quantity: null
  };
  $('#name').change(function(){
    university.name = $('#name').val();
  });
  
  $('#photo').change(function(){
    university.photo = $('#photo').val();
  });
  $('#url').change(function(){
    university.url = $('#url').val();
  });
  
  $('#description').change(function(){
    university.description = $('#description').val();
  });
  $('#rank').change(function(){
    university.rank = $('#rank').val();
  });
  $('#address').change(function(){
    university.address = $('#address').val();
  });
 
  
   
  $('#submit').click(function(){
    $.ajax({
      method:"POST",
      url:'/api/universities',
      data: university
    }).done(function(response){
      console.log(response);
      window.location.replace("/universities/"+response._id);
    }).fail(function(response){
         console.log(response);
    //   $("#error").text(JSON.parse(response.responseText).message);
    //     console.log(JSON.parse(response.responseText).message);
  });
  });
  </script>
</html>